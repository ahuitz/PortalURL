<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PortalUrlPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>cursos.percistence.Seccion</class>
    <class>cursos.percistence.DetalleEntrega</class>
    <class>cursos.percistence.SeccionCursos</class>
    <class>cursos.percistence.Asignados</class>
    <class>cursos.percistence.Usuario</class>
    <class>cursos.percistence.Tarea</class>
    <class>cursos.percistence.Entrega</class>
    <class>cursos.percistence.Curso</class>
    <class>cursos.percistence.Recurso</class>
    <class>cursos.percistence.Archivos</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dbcursos?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
